---
import ProjectDetailedCard from "@/components/ProjectDetailedCard.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Parser transport video">
	<ProjectDetailedCard
		title="Parser transport video (.ts)"
		url="https://github.com/anonymze/zig_parser_m3u8"
		badges={[
			{
				message: "Script",
			},
			{
				message: "Zig",
			},
			{
				message: "FFMPEG",
			},
		]}
		messages={[
			"Mon premier projet personnel en Zig. Le but est simple : lui donner un fichier de lecture .m3u8 (c'est un type de fichier qui est utilisé pour stocker des urls de streaming) et derrière il va télécharger toutes les vidéos de streaming associées et en sortir une vidéo complète au format MP4 grâce au plugin FFmpeg.",
		]}
	/>
</Layout>
