---
import ProjectDetailedCard from "@/components/ProjectDetailedCard.astro";
import Layout from "@layouts/Layout.astro";

import RescueOcean from "@assets/images/rescue-ocean/rescue-ocean.png";
---

<Layout title="Ramassage déchets">
	<ProjectDetailedCard
		title="Ramassage déchets"
		url="https://projectrescueocean.org/"
		images={[RescueOcean]}
		badges={[
			{
				message: "Angular",
			},
			{
				message: "Ionic",
			},
			{
				message: "Mobiles stores",
			},
			{
				message: "Autonomy",
			},
			{
				message: "I18n",
			},
		]}
		messages={[
			"Ma première application mobile en autonomie. C'est une simple application pour déclarer vos déchets ramassés en bord de plage.",
			"Pour ma première application mobile la diffusion sur les stores Google et Apple fut le plus complexe à mes yeux, il y a tout un tas d'étapes et de vérifications avant de voir votre projet mis en ligne."
		]}
	/>
</Layout>
