---
import { navs } from "./_navbar";
import Accessories from "./_components/Accessories";
import MagicSVG from "@assets/icons/magic.svg?raw";
---

<header>
	<nav>
		<menu>
			<li class="mr-6">
				<a href="/"
					><span class="text-secondary font-extrabold text-lg whitespace-nowrap"
						>Yann Metier <Fragment set:html={MagicSVG} />
					</span></a>
			</li>
			{
				navs.map((nav) => {
					return (
						<li>
							<a href={nav.url}>{nav.label}</a>
						</li>
					);
				})
			}

			<div class="ml-auto">
				<Accessories client:idle />
			</div>
		</menu>
	</nav>
</header>

<style>
	header {
		height: 5rem;

		nav {
			width: 100%;
			max-width: var(--max-width-layout);
			margin-inline: auto;

			menu,
			menu div {
				display: flex;
				align-items: center;
				column-gap: 1rem;
			}
		}

		menu li :is(button, a) {
			padding: 0.7rem;
		}
	}
</style>
