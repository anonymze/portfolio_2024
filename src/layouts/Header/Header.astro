---
import { navs } from "./_nav_links";
import { getRelativeLocaleUrl } from "astro:i18n";
import Accessories from "./_components/Accessories.astro";
import MagicSVG from "@assets/icons/magic.svg?raw";
import type { I18n } from "@/types/i18n";

const locale = Astro.currentLocale as I18n;
---

<header>
	<nav>
		<menu>
			<li class="mr-6">
				<a href={getRelativeLocaleUrl(Astro.currentLocale!, "")}
					><span class="text-secondary font-extrabold text-lg whitespace-nowrap"
						>Yann Metier <Fragment set:html={MagicSVG} />
					</span></a
				>
			</li>
			{
				navs(locale).map((nav) => {
					return (
						<li>
							<a href={getRelativeLocaleUrl(Astro.currentLocale!, nav.url)}>{nav.label}</a>
						</li>
					);
				})
			}

			<div class="ml-auto">
				<Accessories />
			</div>
		</menu>
	</nav>
</header>

<style>
	header {
		nav {
			height: 5rem;
			width: 100%;
			max-width: var(--max-width-layout);
			margin-inline: auto;

			menu,
			menu > div {
				display: flex;
				align-items: center;
				column-gap: 1rem;
			}
		}

		menu li {
			position: relative;

			button,
			a {
				display: block;
				padding: 0.7rem;
			}
		}
	}
</style>
