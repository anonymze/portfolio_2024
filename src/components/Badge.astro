---
interface Props {
	message: string;
}

const { message } = Astro.props;
---

<div class="inline-block w-fit py-1 px-1.5 ml-2 align-text-top rounded-[5px] text-xs bg-tertiary">
	{message}
</div>

<style>
	div {
		display: inline-block;
		width: fit-content;
		vertical-align: text-top;
		margin-left: 0.5rem;
		padding: 0.25rem 0.375rem;
		font-size: var(--text-xs);
	}
</style>
