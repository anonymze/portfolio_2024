---
interface Props {
	message: string;
	class?: string;
}

const { message } = Astro.props;
---

<div class:list={Astro.props.class}>
	{message}
</div>

<style>
	div {
		display: inline-block;
		width: fit-content;
		vertical-align: text-top;
		padding: 0.25rem 0.375rem;
		border-radius: 5px;
		line-height: 1rem;
		background-color: var(--color-tertiary);
	}
</style>
